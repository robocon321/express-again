extends ../common/bootstrap.pug
block content
  h1.mx-auto="Page: "+page
  div.container
    div.row
      each item,index in goods
        div.col-sm-4.card-deck.mt-1
          .card(style='width: 18rem;')
            img.card-img-top(src=item.image, alt='...')
            .card-body
              h5.card-title=(20*(page-1)+index+1)+"."+item.name
              p.card-text=item.content
              a.btn.btn-primary(href='#') Add to cart
  nav(aria-label='Page navigation')
    ul.pagination.pagination-sm.justify-content-center.mt-4
      if page<=1
        li.page-item.active
          a.page-link(href='/goods?page='+page)= page
        li.page-item
          a.page-link(href='/goods?page='+(page*1+1), aria-label='Next')
            span(aria-hidden='true') Next
      else if page <=2
        li.page-item
          a.page-link(href='/goods?page='+(page*1-1))= page-1
        li.page-item.active
          a.page-link(href='/goods?page='+page)= page
        li.page-item
          a.page-link(href='/goods?page='+(page*1+1), aria-label='Next')
            span(aria-hidden='true') Next
      else if page>=pageMax
        li.page-item
          a.page-link(href='/goods?page='+(page*1-1), aria-label='Next')
            span(aria-hidden='true') Previous
        li.page-item.active
          a.page-link(href='/goods?page='+page)= page
      else if page>=pageMax-1
        li.page-item
          a.page-link(href='/goods?page='+(page*1-1), aria-label='Previous')
            span(aria-hidden='true') Previous
        li.page-item.active
          a.page-link(href='/goods?page='+page)= page
        li.page-item
          a.page-link(href='/goods?page='+(page*1+1))= page*1+1
      else
        li.page-item
          a.page-link(href='/goods?page='+(page*1-1), aria-label='Previous')
            span(aria-hidden='true') Previous
        li.page-item
          a.page-link(href='/goods?page='+(page*1-1))= page-1
        li.page-item.active
          a.page-link(href='/goods?page='+page)= page
        li.page-item
          a.page-link(href='/goods?page='+(page*1+1))= page*1+1
        li.page-item
          a.page-link(href='/goods?page='+(page*1+1), aria-label='Next')
            span(aria-hidden='true') Next